with "config";
with "util";
@WITH_AUNIT@

project Testutil is

   for Source_Dirs use ("testutil", @UTIL_XUNIT_DIR@);
   for Library_Dir use Util.Library_Dir & "/testutil";
   for Library_Name use "adatestutil";
   for Library_Kind use "static";

   for Object_Dir use "obj/testutil";

   package compiler is
      --  Disable some comment style checks to avoid several warnings in Ahven files.
      for Default_Switches ("Ada") use Config.Compiler'Default_Switches ("Ada") & ("-gnaty-cs");
   end compiler;

   package Binder renames Config.Binder;
   package Builder renames Config.Builder;

end Testutil;
