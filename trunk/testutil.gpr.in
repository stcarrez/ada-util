with "config";
with "util";
@WITH_AUNIT@

project Testutil is

   XUNIT_SRC_DIR := "@UTIL_XUNIT_DIR@";

   for Source_Dirs use ("testutil", XUNIT_SRC_DIR, "testutil/ahven/unix");
   for Library_Dir use Util.Library_Dir & "/testutil";
   for Library_Name use "adatestutil";
   for Library_Kind use "static";

   for Object_Dir use "obj/testutil";

   package Binder renames Config.Binder;
   package Builder renames Config.Builder;
   package Compiler renames Config.Compiler;

end Testutil;
