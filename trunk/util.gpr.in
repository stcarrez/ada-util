with "config";
@WITH_XML_ADA@

project Util is
   Version := "@UTIL_VERSION@";
   Library_Dir := "@UTIL_LIBDIR@";

   Xml_Src_Dir := "@UTIL_XML_DIR@";
   Asm_Src_Dir := "@UTIL_ASM_DIR@";

   for Source_Dirs use ("src", Asm_Src_Dir, Xml_Src_Dir);

   for Library_Dir use "lib/util";
   for Library_Name use "adautil";
   for Library_Kind use "static";

   for Object_Dir use "obj/util";

   package Builder  renames Config.Builder;
   package Compiler renames Config.Compiler;
   package Binder   renames Config.Binder;
   package Linker   renames Config.Linker;

end Util;
